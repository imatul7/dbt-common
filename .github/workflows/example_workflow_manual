name: Example Workflow on repo Changes

on:
  push:
  pull_request:
  workflow_dispatch:

jobs:
  your_job:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - name: Check for changes in specific paths
        id: check_changes
        run: |
          # Using git diff to check for changes in 'dbt_common' directory
          # between the current HEAD and the last commit.
          git diff --quiet HEAD HEAD~1 -- dbt_common
          if [ $? -eq 1 ]; then
            echo "::set-output name=changes_detected::true"
          else
            echo "::set-output name=changes_detected::false"
          fi
      - name: Run a script or command if changes detected
        if: steps.check_changes.outputs.changes_detected == 'true'
        run: echo "Changes detected in repo dbt_common"
